@model IEnumerable<CommercyDomain.Entities.Customer>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.NameCustomer)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DtaBirth)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NumberPersonalDocument)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AddressCustomer)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NameCustomer)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DtaBirth)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumberPersonalDocument)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AddressCustomer)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CustomerId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CustomerId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.CustomerId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
